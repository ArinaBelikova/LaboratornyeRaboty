#include <stdio.h>
#include <locale.h>
 
int main()
{
	setlocale(LC_ALL, "Rus");
	int x;
	printf("Введите число\n");
	scanf ("%f", &x);	
	if (x == 0) printf("Нулевое, число" );
	else {
    	if (x > 0) printf("Положительное, ");
    	else printf("Отрицательное, ");
    	if ((x % 2) == 0) printf("чётное число");
    	else printf("нечётное число");
   }
   return 0;
}
