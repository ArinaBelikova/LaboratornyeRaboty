#include <stdio.h>
#include <stdlib.h>
#include <locale.h>

int main()
{
	setlocale(LC_ALL, "Rus");
	float a, b, c, d, e;
	printf("Введите 3 числа\n");
	scanf ("%f  %f  %f", &a, &b, &c);
	d=abs(a - b);
	e=abs(a - c);
	if (d < e)  printf("В ближе, расстояние от точки А: %f", d);
	else printf("C ближе, расстояние от точки А: %f", e);
	return 0;
}
