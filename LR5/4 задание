#include<stdio.h>
#include<math.h>
#include <locale.h>

int main()
{
	setlocale(LC_ALL, "Rus");
	float x1, y1, x2, y2, a, b, P, S;
	printf("Введите координаты точки A\n");
	scanf("%f", &x1);
	scanf("%f", &y1);
	printf("Введите координаты точки B\n");
	scanf("%f", &x2);
	scanf("%f", &y2);
	a=fabs(x2-x1);
	b=fabs(y2-y1);
	P=(a+b)*2;
	S=a*b;
	printf("%f ", P);
	printf("%f ", S);
	return 0;
}
